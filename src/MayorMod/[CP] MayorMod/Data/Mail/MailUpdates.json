{
    "Changes": [
        // Mail backgrounds
        {
            "LogName": "Load new image for Mail background",
            "Action": "Load",
            "Target": "LooseSprites/MayorMod_letterBG",
            "FromFile": "Assets/Mail/LetterBackground.png"
        },
        // Mails
        {
            "LogName": "Loading Mails",
            "Action": "EditData",
            "Target": "data/mail",
            "Entries": {
                "{{ModId}}_RegisteredForElectionMail": "{{i18n:{{ModId}}_Mail.RegistrationMail.Body}}[#]{{i18n:{{ModId}}_Mail.RegistrationMail.Title}}",
                "{{ModId}}_TalkingToVotersMail": "{{i18n:{{ModId}}_Mail.TalkingToVotersMail.Body}}[#]{{i18n:{{ModId}}_Mail.TalkingToVotersMail.Title}}",
                "CampaignWithLeafletsMail": "{{i18n:{{ModId}}_Mail.CampaignWithLeafletsMail.Body}}%item quest {{ModId}}_CampaignWithLeafletsQuest %%[#]{{i18n:{{ModId}}_Mail.CampaignWithLeafletsMail.Title}}",
                "GilCampaignMail": "{{i18n:{{ModId}}_Mail.GilCampaignMail.Body}}[#]{{i18n:{{ModId}}_Mail.GilCampaignMail.Title}}"
            }
        },
        //Send mail
        {
            "Action": "EditData",
            "Target": "Data/TriggerActions",
            "Entries": {
                "{{ModId}}_RegisteredForElectionTrigger": {
                    "Id": "{{ModId}}_SendRegisteredForElectionMail",
                    "Trigger": "DayEnding",
                    "HostOnly": "true",
                    "Condition": "PLAYER_HAS_MAIL Current {{ModId}}_RegisteredForBallot Received",
                    "Actions": [
                        "AddMail Current {{ModId}}_RegisteredForElectionMail",
                        "AddConversationTopic {{ModId}}_RegisteredForBallotTopic 2"
                    ]
                }
            }
        },
        {
            "Action": "EditData",
            "Target": "Data/TriggerActions",
            "Entries": {
                "{{ModId}}_TalkingToVoterTrigger": {
                    "Id": "{{ModId}}_SendTalkingToVoterMail",
                    "Trigger": "DayEnding",
                    "HostOnly": "true",
                    "Condition": "PLAYER_HAS_MAIL Current {{ModId}}_RegisteredForElectionMail Received,!PLAYER_HAS_CONVERSATION_TOPIC Current {{ModId}}_RegisteredForBallotTopic,",
                    "Actions": [
                        "AddMail Current {{ModId}}_TalkingToVotersMail",
                        "AddConversationTopic {{ModId}}_TalkingToVotersTopic 3"
                    ]
                }
            }
        }
    ]
}
