{
    "Changes": [
        // Mail backgrounds
        {
            "LogName": "Load new image for Mail background",
            "Action": "Load",
            "Target": "Mods/{{ModId}}/ElectionLetterBG",
            "FromFile": "Assets/Mail/LetterBackground.png"
        },
        // Mails
        {
            "LogName": "Loading Mails",
            "Action": "EditData",
            "Target": "Data/Mail",
            "Entries": {
                "{{ModId}}_TalkingToVotersMail": "{{i18n:{{ModId}}_Mail.TalkingToVotersMail.Body}} %item object EmuEngine.MayorModCP_Leaflet 15%%[#]{{i18n:{{ModId}}_Mail.TalkingToVotersMail.Title}}",
                "{{ModId}}_CampaignMail": "{{i18n:{{ModId}}_Mail.CampaignMail.Body}} %item bigobject EmuEngine.MayorModCP_ElectionSign%%[#]{{i18n:{{ModId}}_Mail.CampaignMail.Title}}"
            }
        },
        //Send mail
        {
            "Action": "EditData",
            "Target": "Data/TriggerActions",
            "Entries": {
                //"{{ModId}}_RegisteredForElectionTrigger": {
                //    "Id": "{{ModId}}_SendRegisteredForElectionMail",
                //    "Trigger": "DayEnding",
                //    "HostOnly": "true",
                //    "Condition": "PLAYER_HAS_MAIL Current {{ModId}}_RegisteredForBallot Received",
                //    "Actions": [
                //        "AddMail Current {{ModId}}_RegisteredForElectionMail",
                //        "AddConversationTopic {{ModId}}_RegisteredForBallotTopic 2"
                //    ]
                //},
                "{{ModId}}_TalkingToVotersTrigger": {
                    "Id": "{{ModId}}_TalkingToVotersTrigger",
                    "Trigger": "DayStarted",
                    "HostOnly": "true",
                    "Condition": "PLAYER_HAS_MAIL Current {{ModId}}_RunningForMayor Received,!PLAYER_HAS_CONVERSATION_TOPIC Current {{ModId}}_RegisteredForBallotTopic",
                    "Actions": [
                        "AddMail Current {{ModId}}_TalkingToVotersMail",
                        "AddConversationTopic {{ModId}}_TalkingToVotersTopic 8"
                    ]
                },
                "{{ModId}}_PutUpPostersTrigger": {
                    "Id": "{{ModId}}_PutUpPostersTrigger",
                    "Trigger": "DayStarted",
                    "HostOnly": "true",
                    "Condition": "PLAYER_HAS_MAIL Current {{ModId}}_RunningForMayor Received, PLAYER_HAS_CONVERSATION_TOPIC Current eventSeen_{{ModId}}_NeedMayorEvent_memory_oneweek",
                    "Actions": [
                        "AddMail Current {{ModId}}_CampaignMail"
                    ]
                }
            }
        }
    ]
}
